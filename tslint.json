{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "linebreak-style": [true, "LF"],
    "interface-name": [true, "never-prefix"],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "any",
        "named-imports-order": "lowercase-first"
      }
    ],
    "one-line": [
      true,
      "check-open-brace",
      "check-whitespace"
    ]
  }
}
